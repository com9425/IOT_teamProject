                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="~에 업데이트됩니다."
                                            android:textSize="15dp" />
                                        <TextView
                                            android:id="@+id/tvinfo7"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="실내미세먼지 :"
                                            android:textColor="#FBFBFB"
                                            android:textSize="15dp"
                                            android:gravity="center"/>
