                                android:layout_height="wrap_content"
                                android:layout_weight="4"></SeekBar>
                            <SeekBar
                                android:id="@+id/sb9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"></SeekBar>


                            <TextView
                                android:id="@+id/tvUpdate7"
                                android:layout_width="match_parent"
