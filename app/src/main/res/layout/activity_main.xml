                    </HorizontalScrollView>
                </LinearLayout>
                    <Button
                        android:id="@+id/btnFirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="정보 새로받아오기"
                        android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvFirstFloorResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1층 정보:~에 업데이트됨"
                    android:layout_gravity="center"
                    android:textColor="#990aa0"
                    android:textSize="20dp" />
                <LinearLayout
                    android:id="@+id/LL1"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tvInfo1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="30dp"
                            android:text="1층주차장정보:"
                            android:visibility="visible" />
                        <TextView
                            android:id="@+id/tvUpdate1"
                           android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="~에 업데이트됨"
                            android:layout_gravity="center"
                            android:textColor="#990000"
                            android:textSize="30dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/tv2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tvInfo2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="30dp"
                            android:text="현관도어상태:"
                            android:visibility="visible" />
                        <TextView
                            android:id="@+id/tvUpdate2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="~에 업데이트됨"
                            android:layout_gravity="center"
                            android:textColor="#990000"
                            android:textSize="30dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/tv3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:textSize="20dp"
                        >
                        <TextView
                            android:id="@+id/tvInfo3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="30dp"
                            android:text="1층가스:"
                            android:visibility="visible" />
                        <TextView
                            android:id="@+id/tvUpdate3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="~에 업데이트됨"
                            android:layout_gravity="center"
                            android:textColor="#990000"
                            android:textSize="30dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/tv4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="30dp"
                        android:orientation="vertical"
                        >
